<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLessonNum"
        android:scaleType="fitCenter"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:contentDescription="Lesson Unit Number" />

    <LinearLayout
        android:id="@+id/layoutLessonInfo"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/tvLessonTitle"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tvLessonDesc"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="15dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivComplete"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:contentDescription="Completion" />
</LinearLayout>